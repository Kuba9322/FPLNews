<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001-1" author="sturnusDev">
        <createTable tableName="article">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(100)">
                <constraints unique="true"/>
            </column>
            <column name="introduction" type="VARCHAR(1000)"/>
            <column name="content" type="VARCHAR(2500)"/>
            <column name="create_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_article_users"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>